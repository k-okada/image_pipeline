<launch>
  <node ns="/stereo" pkg="stereo_image_proc" type="test_pubimage.py" name="test_pubimage" />

  <!-- image proc pipeline -->
  <node ns="/stereo/right" pkg="image_proc" type="image_proc" name="image_proc" >
    <remap from="image" to="image_raw" />
  </node>
  <node ns="/stereo/left"  pkg="image_proc" type="image_proc" name="image_proc" >
    <remap from="image" to="image_raw" />
  </node>

  <!-- stereo pipeline -->
  <node ns="stereo" pkg="stereo_image_proc" type="stereo_image_proc" name="stereo_image_proc" />

  <!-- gui pipeline -->
  <node pkg="image_view" type="stereo_view" name="stereo_view" >
    <remap from="image" to="image_rect" />
  </node>
  <node pkg="rviz" type="rviz" name="rviz" args="-d $(find stereo_image_proc)/test/test_pubimage.rviz" />
</launch>
